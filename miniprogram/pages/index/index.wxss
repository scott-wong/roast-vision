/* index.wxss */
.container {
  padding: 0;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 顶部操作栏 */
.top-actions {
  position: sticky;
  top: 0;
  z-index: 100;
  background-color: #fff;
  padding: 16rpx 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

/* 图片选择区域 */
.image-section {
  background-color: #fff;
  border-radius: 16rpx;
  margin: 16rpx 20rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
  width: calc(100% - 40rpx);
}

.image-placeholder {
  padding: 80rpx 40rpx;
  text-align: center;
}

.placeholder-content {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.placeholder-text {
  font-size: 28rpx;
  color: #999;
}

.button-group {
  display: flex;
  gap: 12rpx;
  justify-content: center;
  align-items: center;
}

.btn-primary {
  background-color: #07c160;
  color: #fff;
  border-radius: 8rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
  border: none;
}

.btn-primary::after {
  border: none;
}

.btn-small {
  padding: 12rpx 20rpx;
  font-size: 26rpx;
  flex: 1;
  max-width: 220rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 64rpx;
  line-height: 1.4;
  box-sizing: border-box;
}

.btn-secondary {
  background-color: #f0f0f0;
  color: #333;
  border-radius: 8rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
  border: none;
}

.btn-secondary::after {
  border: none;
}

/* 图片容器 */
.image-container {
  position: relative;
  width: 100%;
  background-color: #000;
  min-height: 200rpx;
}

.coffee-image {
  display: block;
  width: 100%;
  height: auto;
}

.hidden-canvas {
  position: fixed;
  top: -9999px;
  left: -9999px;
  opacity: 0;
  pointer-events: none;
}

/* 采样点标记 */
.sample-points {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  pointer-events: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.sample-point {
  position: absolute;
  transform: translate(-50%, -50%);
  pointer-events: auto;
}

.point-marker {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background-color: #07c160;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: bold;
  border: 4rpx solid #fff;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.3);
}

/* 采样提示 */
.sample-hint {
  position: absolute;
  bottom: 20rpx;
  left: 50%;
  transform: translateX(-50%);
  background-color: rgba(0, 0, 0, 0.7);
  color: #fff;
  padding: 16rpx 32rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
}

/* 操作按钮区域 */
.action-section {
  display: flex;
  gap: 20rpx;
  margin: 20rpx;
  justify-content: center;
}

/* 检测结果区域 */
.result-section {
  margin: 20rpx;
}

.result-card {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
}

.result-header {
  margin-bottom: 24rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.result-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.result-content {
  margin-bottom: 30rpx;
}

.result-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.result-item:last-child {
  border-bottom: none;
}

.result-item.main-result {
  background: linear-gradient(135deg, #f0fdf4 0%, #dcfce7 100%);
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  border: none;
  box-shadow: 0 2rpx 8rpx rgba(7, 193, 96, 0.1);
}

.result-label {
  font-size: 26rpx;
  color: #666;
}

.result-value {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.agtron-value {
  font-size: 56rpx;
  color: #07c160;
  font-weight: bold;
  text-shadow: 0 2rpx 4rpx rgba(7, 193, 96, 0.15);
}

/* 采样点详细信息 */
.sample-details {
  margin-top: 24rpx;
  padding-top: 24rpx;
  border-top: 1rpx solid #f0f0f0;
}

.details-title {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 16rpx;
  display: block;
  font-weight: 500;
}

.sample-detail-item {
  display: flex;
  align-items: center;
  padding: 10rpx 0;
  font-size: 22rpx;
}

.detail-label {
  color: #999;
  margin-right: 16rpx;
  min-width: 70rpx;
}

.detail-value {
  color: #666;
  flex: 1;
}

/* 结果操作按钮 */
.result-actions {
  margin-top: 30rpx;
  padding-top: 30rpx;
  border-top: 1rpx solid #f0f0f0;
}

/* 使用提示 */
.tips-section {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 28rpx;
  margin: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
}

.tips-title {
  font-size: 26rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
  display: block;
}

.tips-content {
  font-size: 22rpx;
  color: #666;
  line-height: 2;
  white-space: pre-line;
}

